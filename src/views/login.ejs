        <form method="post" action="/login" class="formulario">
          <div class="container">
            <% if(signinMessage.length>0){ %>
                <div class="alert alert-danger">
                    <%= signinMessage %>
                </div>
            <% } %>
          </div>
          <div class="form-group">
            <h1>Login</h1>
            <p id="emailHelp" class="form-text text-muted">Todos los campos marcados con * son obligarios</p>
          </div>
          <div class="form-group">
            <label for="exampleInputEmail1">Correo electronico</label>
            <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="*Correo electronico" name="email" required>
          </div>
          <div class="form-group">
            <label for="exampleInputPassword1">Contrase単a</label>
            <input type="password" class="form-control" id="exampleInputPassword1" placeholder="*Contrase単a" name="password" required minlength="8" maxlength="12">
            <a id="emailHelp" class="form-text text-muted" href="/restablecer">Restablecer contrase単a</a>
          </div>
          <a href="/registro" class="link">多No tienes cuenta? Crea una</a>
          <button type="submit" class="btn btn-primary">Ingresar</button>
        </form>

        <footer>
        <div class="waves">
            <div class="wave" id="wave1"></div>
            <div class="wave" id="wave2"></div>
            <div class="wave" id="wave3"></div>
            <div class="wave" id="wave4"></div>
        </div>
        <ul class="social-icon">
            <li><a href=""><ion-icon name="logo-facebook"></ion-icon></a></li>
            <li><a href=""><ion-icon name="logo-instagram"></ion-icon></a></li>
        </ul>
        <ul class="menu">
            <li><a href="">Inicio</a></li>
            <li><a href="">Nosotros</a></li>
            <li><a href="">CIJ</a></li>
        </ul>
        <p>@2025 MyDrugs | All Rights Reserved</p>
    </footer>
