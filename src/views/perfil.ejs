      <div class="titulo">
        <h3>Has estado libre de alcohol durante</h3>
      </div>
    <div class="container">
    <div class="progress">
        <div id="progress-bar-year" class="progress-bar bg-primary" role="progressbar" style="width: 0%;" aria-valuemin="0" aria-valuemax="10"></div>
        <span id="text-años">Años: 0</span>
    </div>
    <div class="progress">
        <div id="progress-bar-success" class="progress-bar bg-success" role="progressbar" style="width: 0%;" aria-valuemin="0" aria-valuemax="12"></div>
        <span id="text-meses">Meses: 0</span>
    </div>

    <div class="progress">
        <div id="progress-bar-success-dias" class="progress-bar bg-success" role="progressbar" style="width: 0%;" aria-valuemin="0" aria-valuemax="365"></div>
        <span id="text-dias">Días: 0</span>
    </div>
    <div class="progress">
        <div id="progress-bar-info" class="progress-bar bg-info" role="progressbar" style="width: 0%;" aria-valuemin="0" aria-valuemax="24"></div>
        <span id="text-horas">Horas: 0</span>
    </div>
    <div class="progress">
        <div id="progress-bar-warning" class="progress-bar bg-warning" role="progressbar" style="width: 0%;" aria-valuemin="0" aria-valuemax="60"></div>
        <span id="text-minutos">Minutos: 0</span>
    </div>
    <div class="progress">
        <div id="progress-bar-danger" class="progress-bar bg-danger" role="progressbar" style="width: 0%;" aria-valuemin="0" aria-valuemax="60"></div>
        <span id="text-segundos">Segundos: 0</span>
    </div>
</div>
<div class="elfsight-app-75d1d6d3-b484-48de-8ed6-ca8f1a585485" data-elfsight-app-lazy></div>

    <script>
        function actualizarDias(){
            fetch("/contador/<%= user._id %>")
            .then(Response=> Response.json())
            .then(data=>{
                document.getElementById("text-años").innerText = `Años: ${data.años}`;
                document.getElementById("text-meses").innerText = `Meses: ${data.meses}`;
                document.getElementById("text-dias").innerText = `Días: ${data.dias}`;
                document.getElementById("text-horas").innerText = `Horas: ${data.horas}`;
                document.getElementById("text-minutos").innerText = `Minutos: ${data.minutos}`;
                document.getElementById("text-segundos").innerText = `Segundos: ${data.segundos}`;

                document.getElementById("progress-bar-year").style.width = `${(data.años / 10) * 100}%`;
                document.getElementById("progress-bar-success").style.width = `${(data.meses / 12) * 100}%`; 
                document.getElementById("progress-bar-success-dias").style.width = `${(data.dias / 365) * 100}%`; 
                document.getElementById("progress-bar-info").style.width = `${(data.horas / 24) * 100}%`;
                document.getElementById("progress-bar-warning").style.width = `${(data.minutos / 60) * 100}%`;
                document.getElementById("progress-bar-danger").style.width = `${(data.segundos / 60) * 100}%`;
            });
        }
        setInterval(actualizarDias,1000);
        actualizarDias();
    </script>
    <script src="https://static.elfsight.com/platform/platform.js" async></script>
    <script src="/javascript/navbar.js"></script>
</body>
